<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.nbcuni.pubcentral.bo">
    <class name="com.poc.pubcentral.bo.EpisodePojo" table="EPISODE">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="title" column="TITLE"/>
        <property name="subhead" column="SUBHEAD" type="text"/>
        <property name="shortDescription" column="SHORT_DESCRIPTION" type="text"/>
        <property name="mediumDescription" column="MEDIUM_DESCRIPTION" type="text"/>
        <property name="longDescription" column="LONG_DESCRIPTION" type="text"/>
        <property name="productionNumber" column="PRODUCTION_NUMBER"/>
        <property name="seriesReference" column="SERIES_REFERENCE"/>
        <property name="seasonReference" column="SEASON_REFERENCE"/>
        <property name="episodeType" column="EPISODE_TYPE"/>
        <property name="episodeNumber" column="EPISODE_NUMBER"/>
        <property name="supplementaryAiring" column="SUPPLEMENTARY_AIRING"/>
        <property name="categories" column="CATEGORIES"/>
        <property name="tags" column="TAGS"/>
        <property name="externalLink" column="EXTERNAL_LINK"/>
        <property name="tvRating" column="TV_RATING"/>
    </class>
</hibernate-mapping>
